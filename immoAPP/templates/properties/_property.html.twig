<div class="card mb-4">
    {% if property.filename  %}
        <img src="images/properties/{{ property.filename }}" alt="" class="card-img-top" style="max-width: 100%; height: auto;">
    {% else %}
        <img src="{{ asset('images/properties/empty.png') }}" alt="" class="card-img-top" style="max-width: 100%; height: auto;">
    {% endif %}
    <div class="card-body">
        <h5 class="card-title">
            <a href="{{ path('property.show', {slug: property.slug, id: property.id}) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">{{ property.surface }}m² - {{ property.city }} ({{ property.postalCode }})</p>
        <div class="text-primary" style="font-weight: bold; font-size: 2rem;">
            {{ property.price | number_format(0, '', ' ') }}€
        </div>
    </div>
</div>

